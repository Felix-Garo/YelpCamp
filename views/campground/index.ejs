<% layout('layouts/boilerplate') %>

<div class="mb-5" id="cluster-map"></div>

<div class="text-center navbar-dark mt-3 mb-4 py-1" id="h1CampG">
  <h1>All Campgrounds</h1>
</div>

<div class="container">
  <% for (let campground of campgrounds){%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <%if(campground.images.length) {%>
        <a href="/campgrounds/<%=campground._id%>"
          ><img class="img-fluid" alt="" src="<%=campground.images[0].url%>"
        /></a>
        <% }else {%>
        <img class="img-fluid" alt="" src="" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text">
            <b><small class="text-muted"><%= campground.location%></small></b>
          </p>
          <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>"
            >More Info</a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
